<%= render "layouts/navigation"%>
<div class="container">
<h3>Listing all staffs</h3>

<table class="table">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Role</th>
    <th>Age</th>
    <th>Sex</th>
    <th>Dob</th>
    <th>Department</th>
  </tr>

<% @staffs.each do |staff| %>
  <tr>
    <td><%= staff.first_name %></td>
    <td><%= staff.last_name %></td>
    <td><%= staff.role %></td>
    <td><%= staff.age %></td>
    <td><%= staff.sex %></td>
    <td><%= staff.dob %></td>
    <td><%= staff.department.name %></td>
  </tr>
<% end %>
</table>

<br />

</div>