<%= simple_form_for([@department,@staff]) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
      <% @staff.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="control-group">
  <div class="span3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="span3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="span3">
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div class="span3">
    <%= f.label :sex %>
    <%= f.select :sex, [['Male'],['Female']] %>
  </div>
  <div class="span3">
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
    <div class="span3">
  <%=f.label :address%>
  <%=f.text_area :address%>
  </div>
  <div class="span7">
    <%= f.label :dob %>
    <%= f.date_select :dob, :start_year => 1940 %>
  </div>
  <div class="span3">
    <%= f.label :salary %>
    <%= f.text_field :salary %>
  </div>
  <div class="span3">
    <%= f.label :department %>
    <%= f.association :department, :label => false, :disabled => true %>
  </div>
  </div>
  <div class="span3">
    <%= f.submit %>
  </div>
<% end %>
</div>

